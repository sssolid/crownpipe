DOCKER_BUILDKIT=0

# ======================
# Database Configuration
# ======================
# PG_HOST=127.0.0.1
PG_PORT=5432
PG_DATABASE=crown_marketing
PG_USER=crown_admin
PG_PASSWORD=your_password_here

# For Docker, use:
PG_HOST=db

# ======================
# Media Pipeline
# ======================
CROWNPIPE_MEDIA_BASE=/srv/media
CROWNPIPE_MEDIA_MAX_CONCURRENT_BGREMOVE=4
CROWNPIPE_MEDIA_BGREMOVE_TIMEOUT_SECONDS=300
CROWNPIPE_MEDIA_IMAGEMAGICK_CONVERT_BIN=convert
CROWNPIPE_MEDIA_DEFAULT_DPI=300
CROWNPIPE_MEDIA_JPEG_QUALITY=90
CROWNPIPE_MEDIA_PNG_COMPRESSION=9

# ======================
# Data Pipeline
# ======================
CROWNPIPE_DATA_BASE=/srv/shares/marketing/filemaker

# FileMaker Database
FILEMAKER_SERVER=your_filemaker_server
FILEMAKER_PORT=443
FILEMAKER_DATABASE=your_database_name
FILEMAKER_USERNAME=your_username
FILEMAKER_PASSWORD=your_password

# IBM iSeries (AS/400)
ISERIES_SERVER=your_iseries_server
ISERIES_DATABASE=your_database_name
ISERIES_USERNAME=your_username
ISERIES_PASSWORD=your_password

# ======================
# Logging Configuration
# ======================
CROWNPIPE_LOG_DIR=/var/log/crownpipe
CROWNPIPE_LOG_LEVEL=INFO
CROWNPIPE_LOG_TO_DATABASE=true
CROWNPIPE_LOG_TO_FILE=true
CROWNPIPE_LOG_MAX_LOG_SIZE_MB=50
CROWNPIPE_LOG_RETENTION_DAYS=90

# ======================
# Django Dashboard
# ======================
# CRITICAL: Change this in production!
DJANGO_SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Set to false in production
DJANGO_DEBUG=false

# Comma-separated list of allowed hosts
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-server-hostname,your-server-ip

# ======================
# Environment
# ======================
# Options: development, staging, production
CROWNPIPE_ENVIRONMENT=development

# ======================
# Python Path (usually not needed if using systemd/docker correctly)
# ======================
# PYTHONPATH=/opt/crownpipe